      .section.text-center
        .container
          .lead-icon.h3
            %i.icon-paper-plane
          .row
            .col-sm-12.col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2
              %h2.section-title != 'Мы знаем, как запускать успешные <span class="text-nowrap">интернет-магазины</span>'
          .form-flatbox
            .row
              .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
                %form{action: '?', method: 'post', accept-charset: 'UTF-8', novalidate: 'novalidate'}
                  %h2.form-title Регистрация
                  .form-group.form-group-first
                    %input.form-control{type: 'text', placeholder: 'Название магазина'}
                  .form-group
                    %input.form-control{type: 'text', placeholder: 'Ваше Имя'}
                  .form-group
                    %input.form-control{type: 'tel', placeholder: 'Номер телефона'}
                  .form-group
                    %input.form-control{type: 'email', placeholder: 'E-mail'}
                  .form-group.form-group-last
                    %input.btn.btn-success.btn-block{name: 'commit', type: 'submit', value: 'Продолжить'}
          .row
            .col-sm-12.col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2
              %p &nbsp;
              %p != '<span class="text-nowrap">звоните  – <a href="tel:88007755661">8 (800) 77-55-661</a></span>,</span> <span class="text-nowrap">или пишите – <a href="mailto:support@kiiiosk.ru" title="support@kiiiosk.ru">support@kiiiosk.ru</a></span>'
